@model CAPSTONE_3.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = null;
}

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Registration App</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<html>
    <body>
        <div class="container" style="width:800px; height:800px; margin:15% 40%; vertical-align:middle;">
            @if (!string.IsNullOrEmpty(ViewBag.LoginFail))
            {
                <div>
                    <span>@ViewBag.LoginFail</span>
                </div>
            }

            @using (Html.BeginForm("LoginCheck", "Login"))
            {
                <div class="row">
                    <h3>Registration App</h3>
                </div>
                <div class="row">
                    <div class="col-lg-3">
                        <h4>Username</h4>
                    </div>
                    <div class="col-lg-3">
                        @Html.TextBoxFor(x => x.UserName)
                    </div>
                </div>
                <div class="row">
                    <div class="col-lg-3">
                        <h4>Password</h4>
                    </div>
                    <div class="col-lg-3">
                        @Html.TextBoxFor(x => x.Password)
                    </div>
                </div>
                <div class="row">
                    <div style="align-content: center;">
                        <input type="submit" value="Login" />
                        @Html.ActionLink("Create Account", "Index", "StudentAccount")
                    </div>
                </div>
            }
        </div>
    </body>
</html>
